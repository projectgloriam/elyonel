<p id="notice"><%= notice %></p>

<h1>Profits</h1>

<table>
  <thead>
    <tr>
      <th>Total</th>
      <th>Expenses</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profits.each do |profit| %>
      <tr>
        <td><%= profit.total %></td>
        <td><%= profit.expenses %></td>
        <td><%= link_to 'Show', profit %></td>
        <td><%= link_to 'Edit', edit_profit_path(profit) %></td>
        <td><%= link_to 'Destroy', profit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profit', new_profit_path %>
